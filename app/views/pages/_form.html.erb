<%= form_for @transaction do |f| %>
  <div class="form-group">
    <label>Patron ID</label>
    <%= f.text_field :patron_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Book ID</label>
    <%= f.text_field :book_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Transaction Type ID</label>
    <%= f.text_field :transaction_type_id, class: 'form-control' %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
  <button type="reset" class="btn btn-default">Reset</button>
  <% if current_page? patrons_path then %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
  <% end %>
<% end %>
