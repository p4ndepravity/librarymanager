<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Dashboard</h1>
  </div>
</div>

<% if flash[:notice] then %>
  <div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] then %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div class="panel panel-primary">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6">
        <%= new_link('patron', 'btn btn-primary btn-lg btn-block', 'New Patron') %>
      </div>
      <div class="col-sm-6">
        <%= new_link('book', 'btn btn-primary btn-lg btn-block', 'New Book') %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-green">
      <div class="panel-heading">
        Books Recently Checked Out
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="recent" style="width: 100%;">
            <thead>
              <tr>
                <th></th>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN-10</th>
                <th>Published</th>
                <th>Genre</th>
                <th>Fiction?</th>
                <th>ISBN-13</th>
                <th>Rating</th>
                <th>Borrower</th>
                <th>Due Date</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <% if book.checked_out? %>
                  <% if (2.days.ago..Time.now)===book.checkout_date then %>
                    <tr>
                      <td><%= render 'check_in_btn', book: book, image: 'btn' %></td>
                      <td><%= book.id %></td>
                      <td><%= book.title %></td>
                      <td><%= book.author_name %></td>
                      <td><%= book.isbn_10 %></td>
                      <td><%= book.publish_date.strftime("%B %Y") %></td>
                      <td><%= book.genre.name %></td>
                      <td><%= book.is_fiction %></td>
                      <td><%= book.isbn_13 %></td>
                      <td><%= book.rating %></td>
                      <td><%= book.borrower.name %> <%= book.borrower.phone_number %></td>
                      <td><%= book.due_date %></td>
                    </tr>
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="panel-footer">
        links to printables/pdfs/data
      </div>
    </div>
  </div>
