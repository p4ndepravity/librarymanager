<%= form_for @transaction, url: book_transactions_path(book) do |f| %>
  <%= f.hidden_field :book_id, value: book.id %>
  <%= f.hidden_field :patron_id, value: book.borrower.id %>
  <%= f.hidden_field :transaction_type_id, value: 2 %>
  <%= render image, f: f, class_tag: class_tag %>
<% end %>
