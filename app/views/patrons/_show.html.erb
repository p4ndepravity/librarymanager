<div class="panel panel-warning">
  <div class="panel-heading">
    Books Currently Borrowing
  </div>
  <div class="panel-body">
    <div class="dataTable_wrapper">
      <table class="table table-striped table-bordered table-hover" id="borrowed" style="width: 100%;">
        <thead>
          <tr>
            <th></th>
            <th>Book ID</th>
            <th>Title</th>
            <th>Due Date</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <% if book.checked_out? and book.borrower.id == @patron.id %>
              <tr>
                <td><%= render 'check_in_btn', book: book, image: 'btn' %></td>
                <td><%= book.id %></td>
                <td><%= book.title.titlecase %></td>
                <td><%= book.due_date %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    Transaction History
  </div>
  <div class="panel-body">
    <div class="dataTable_wrapper">
      <table class="table table-striped table-bordered table-hover" id="history" style="width: 100%;">
        <thead>
          <tr>
            <th>Book</th>
            <th>In/Out</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% if @transactions %>
            <% @transactions.each do |t| %>
              <tr>
                <td><%= t.book.title %></td>
                <td><%= t.transaction_type.name %></td>
                <td><%= t.created_at %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
</div>

<script>
  $(document).ready(function() {
    $('#borrowed').DataTable({
      responsive: true,
      "lengthMenu": [5,10,20,50,100],
      "pageLength": 5
    });
    $('#history').DataTable({
      responsive: true,
      "lengthMenu": [5,10,20,50,100],
      "pageLength": 5
    });
  });
</script>
