<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_for @book do |f| %>
              <div class="form-group">
                <label>Title</label>
                <%= f.text_field :title, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Author's Last Name</label>
                <%= f.text_field :author_last_name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Author's First Name</label>
                <%= f.text_field :author_first_name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Genre</label>
                <%= f.text_field :isbn_10, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>ISBN-10</label>
                <%= f.text_field :isbn_10, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>ISBN-13</label>
                <%= f.text_field :isbn_13, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Publish Date</label>
                <%= f.date_field :publish_date, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Fiction?</label>
                <%= f.check_box :is_fiction, class: 'checkbox' %>
              </div>
              <div class="form-group">
                <label>Rating</label>
                <%= f.text_field :rating, class: 'form-control' %>
              </div>
              <%= f.submit class: 'btn btn-default' %>
              <button type="reset" class="btn btn-default">Reset</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
